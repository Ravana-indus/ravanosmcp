{
  "name": "erpnext-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for ERPNext ERP system integration",
  "main": "dist/index.js",
  "bin": {
    "erpnext-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "Dockerfile",
    "docker-compose.yml",
    ".env.example",
    ".env.production.example"
  ],
  "scripts": {
    "build": "tsc",
    "build:prod": "npm run clean && tsc --project tsconfig.prod.json",
    "clean": "rm -rf dist",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "start:prod": "node --max-old-space-size=4096 dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "tsx scripts/run-crud-tests.ts",
    "test:crud": "tsx scripts/run-crud-tests.ts",
    "test:workflow": "tsx scripts/run-workflow-tests.ts",
    "test:hr": "tsx scripts/run-hr-tests.ts",
    "test:purchase": "tsx scripts/run-purchase-tests.ts",
    "test:finance": "tsx scripts/run-finance-tests.ts",
    "test:all": "npm run test && npm run test:crud && npm run test:workflow && npm run test:hr && npm run test:purchase && npm run test:finance",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build:prod && npm test",
    "docker:build": "docker build -t erpnext-mcp-server:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env erpnext-mcp-server:latest",
    "docker:compose": "docker-compose up -d",
    "deploy:check": "npm run lint && npm run test && npm run build:prod",
    "health:check": "npm run start & sleep 2 && curl -f http://localhost:3000/health || exit 1",
    "logs:prod": "pm2 logs erpnext-mcp-server",
    "monitor:metrics": "npm run start & npm run scripts/monitor-metrics.ts"
  },
  "keywords": [
    "mcp",
    "erpnext",
    "server",
    "erp",
    "model-context-protocol",
    "ai",
    "assistant",
    "integration"
  ],
  "author": "ERPNext MCP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/erpnext-mcp-server.git"
  },
  "homepage": "https://github.com/your-org/erpnext-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/your-org/erpnext-mcp-server/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "winston": "^3.11.0",
    "axios": "^1.6.0",
    "redis": "^4.6.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/uuid": "^9.0.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.0",
    "nodemon": "^3.0.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}