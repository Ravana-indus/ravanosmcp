# ERPNext MCP Server Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Configuration
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# Process Management
MAX_MEMORY_SIZE=4096
MAX_CONCURRENT_CONNECTIONS=100
REQUEST_TIMEOUT=30000

# =============================================================================
# ERPNext CONNECTION
# =============================================================================

# ERPNext Server Configuration
ERPNEXT_URL=https://your-erpnext-instance.com
ERPNEXT_API_KEY=your-api-key-here
ERPNEXT_API_SECRET=your-api-secret-here

# Connection Settings
ERPNEXT_TIMEOUT=30000
ERPNEXT_MAX_RETRIES=3
ERPNEXT_RETRY_DELAY=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Security
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=900000
ENABLE_CORS=true
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TTL=3600

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/erpnext-mcp-server.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
ENABLE_REQUEST_LOGGING=true

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=300
MAX_CACHE_SIZE=1000

# Connection Pooling
ENABLE_CONNECTION_POOLING=true
MAX_CONNECTIONS=10
MIN_CONNECTIONS=2

# =============================================================================
# BUSINESS DOMAIN CONFIGURATION
# =============================================================================

# Domain Enablement
ENABLE_SALES_DOMAIN=true
ENABLE_PURCHASE_DOMAIN=true
ENABLE_FINANCE_DOMAIN=true
ENABLE_HR_DOMAIN=true

# Feature Flags
ENABLE_ADVANCED_REPORTING=false
ENABLE_REAL_TIME_UPDATES=false
ENABLE_WEBHOOKS=false

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# =============================================================================
# NOTIFICATIONS AND ALERTING
# =============================================================================

# Email Configuration (for alerts)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@your-domain.com

# Alert Configuration
ERROR_ALERT_ENABLED=false
ERROR_ALERT_EMAIL=alerts@your-domain.com
PERFORMANCE_ALERT_ENABLED=false

# =============================================================================
# DEVELOPMENT/DEBUG (DISABLE IN PRODUCTION)
# =============================================================================

# Debug Settings (Set to false in production)
ENABLE_DEBUG_LOGGING=false
ENABLE_DETAILED_ERRORS=false
ENABLE_PERFORMANCE_TRACING=false

# Development Features
ENABLE_DEV_MODE=false
ENABLE_MOCK_RESPONSES=false